<h1>{{title}}</h1>
<div class="row">
  {{#each _ar}}

    <div class="col-sm-6 card">
      <div>
        <img class="float-start" src="{{image}}" style="margin-right:10px" />
        <a href="/{{@index}}"> <h2>{{name}} - {{@index}}</h2></a>
        {{#if worth}}
          <p>Worth: {{worth}}</p>
        {{else}}
          <del>Worth: unknown</del>
        {{/if}}
      </div>
    </div>
  {{/each}}

</div>